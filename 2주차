        "print(\"b =\", b)\n",
        "\n",
        "c = np.full((3, 2), 3)  #모든 성분이 3인 3x2 행렬\n",
        "print(\"c =\", c)\n",
        "\n",
        "d = np.eye(2)           #2x2 단위행렬\n",
        "print(\"d =\", d)"
